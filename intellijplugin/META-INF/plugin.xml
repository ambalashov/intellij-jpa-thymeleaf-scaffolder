<idea-plugin version="2">
  <id>com.peterphi.scaf.jpathymeleaf.plugin.pluginid</id>
  <name>Thymeleaf Bootstrap Entity Template Code Generator</name>
  <version>1.0</version>
  <vendor url="http://www.peterphi.com">Peter Wright</vendor>

  <description><![CDATA[
      Generates a bootstrap-based Thymeleaf template for viewing/editing a JPA entity
      ]]></description>

  <change-notes><![CDATA[]]></change-notes>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="107.105"/>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
	  <action id="generateThymeleafEntityTemplate" class="com.peterphi.scaf.jpathymeleaf.plugin.GenerateThymeleafEntityTemplate"
	          text="Thymeleaf Entity Template" description="Generates a Thymeleaf page from a Hibernate Entity">
		  <add-to-group group-id="GenerateGroup" anchor="last"/>
	  </action>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>
</idea-plugin>
